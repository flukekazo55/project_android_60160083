<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fed7e9"
    tools:context=".authen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/chewy"
            android:text="Name"
            android:textColor="#433F43"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/login_button2"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_name"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:background="@drawable/round"
            android:fontFamily="@font/chewy"
            android:text="logout"
            android:textColor="#433F43"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/line_cut"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/login_button2"
            android:layout_marginTop="10dp"
            android:background="#fd9bca" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_back"
        android:background="@drawable/custom_layout"
        android:layout_marginTop="110dp"
        android:textColor="#433F43"
        android:text="BACK"
        android:fontFamily="@font/chewy"
        android:textSize="15dp"
        android:textStyle="bold"
        android:drawableLeft="@mipmap/back_icon"
        android:layout_width="120dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chewy"
        android:text="Edit Data"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_below="@+id/btn_back"/>

    <TextView
        android:id="@+id/name_lb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/chewy"
        android:text="Name : "
        android:textSize="20dp"
        android:gravity="center"
        android:layout_below="@+id/edit_text"/>

    <EditText
        android:id="@+id/name_ed"
        android:layout_below="@+id/name_lb"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chewy"
        android:background="@drawable/round_ed"
        android:hint="Name"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/year_lb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/chewy"
        android:text="Age : "
        android:textSize="20dp"
        android:gravity="center"
        android:layout_below="@+id/name_ed"/>

    <EditText
        android:id="@+id/year_ed"
        android:layout_below="@+id/year_lb"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chewy"
        android:background="@drawable/round_ed"
        android:hint="Age"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/btn_update"
        android:layout_below="@+id/year_ed"
        android:background="@drawable/custom_layout_4"
        android:layout_marginTop="60dp"
        android:layout_alignParentRight="true"
        android:textColor="#433F43"
        android:text="UPdate"
        android:fontFamily="@font/chewy"
        android:textSize="15dp"
        android:textStyle="bold"
        android:drawableRight="@mipmap/save_icon"
        android:layout_width="120dp"
        android:layout_height="50dp" />



</RelativeLayout>
